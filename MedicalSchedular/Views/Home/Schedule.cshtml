@model Patient
@{
    ViewData["Title"] = "View Schedule";
}



<div class="modal fade show" id="uni_modal" role="dialog" aria-modal="true" style="padding-right: 17px; display: block;">
    <div class="modal-dialog rounded-0 modal-md modal-dialog-centered mid-large" role="document">
        <div class="modal-content  rounded-0">
            <div class="modal-header">
                <h5 class="modal-title">Appointment Form</h5>
            </div>
            <div class="modal-body">
                <style>
                    #uni_modal .modal-content > .modal-footer {
                        display: none;
                    }

                    #uni_modal .modal-body {
                        padding-top: 0 !important;
                    }
                </style>
                <div class="container-fluid">
                        <div class="row" id="appointment">


                            <h1>COME ALONG WITH A COPY OF YOUR SCHOOL FEES RECEIPT AND A COPY OF THIS APPOINMENT SCHEDULE.</h1>
                            <div class="col-6" id="frm-field">
                                <div class="form-group">
                                    <label for="matric" class="control-label">Matric No : @Model.MatricNo</label>
                                </div>

                                <div class="form-group">
                                    <label for="matric" class="control-label">FullName : @Model.FullName</label>
                                </div>
                                <div class="form-group">
                                    <label for="matric" class="control-label">Email : @Model.Email</label>
                                </div>

                                <div class="form-group">
                                    <label for="matric" class="control-label">Level : @Model.Level</label>
                                </div>

                                <div class="form-group">
                                    <label for="matric" class="control-label">Date Scheduled : @Model.Date_Sched.Value.ToString("dddd, dd MMMM yyyy")</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-end w-100 form-group">
                            <button id="button" class="btn-primary btn">Download Schedule</button>
                        </div>
                        <script src="html2pdf.bundle.min.js"></script>
                        <script>
                            const btn = document.getElementById("button");

                            btn.addEventListener("click", function () {
                                var element = document.getElementById('staticBack');
                                html2pdf().from(element).save('filename.pdf');
                            });
                        </script>
                </div>
            </div>
        </div>

    </div>
</div>
