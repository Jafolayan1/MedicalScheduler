@model Appointment
@{
    ViewData["Title"] = "View Schedule";
}



<div class="modal fade show" id="uni_modal" role="dialog" aria-modal="true" style="padding-right: 17px; display: block;">
    <div class="modal-dialog rounded-0 modal-md modal-dialog-centered mid-large" role="document">
        <div class="modal-content  rounded-0">
            <div class="modal-header">
                <h5 class="modal-title text-center">Medical Appointment Schedule</h5>
            </div>
            <div class="modal-body">
                <style>
                    #uni_modal .modal-content > .modal-footer {
                        display: none;
                    }

                    #uni_modal .modal-body {
                        padding-top: 0 !important;
                    }
                </style>
                <div class="container-fluid">
                        <div class="row" id="appointment">

                        <h1> <span class="text-danger text-center"> COME ALONG WITH A COPY OF YOUR SCHOOL FEES RECEIPT AND A COPY OF THIS APPOINMENT SCHEDULE.</span></h1>
                        <div></div>
                            <div class="col-12" id="frm-field">
                                <div class="form-group">
                                <label for="matric" class="control-label">Matric No :   @Model.Student.MatricNo</label>
                                </div>

                                <div class="form-group">
                                <label for="matric" class="control-label">FullName :    @Model.Student.FullName</label>
                                </div>
                                <div class="form-group">
                                <label for="matric" class="control-label">Email :   @Model.Student.Email</label>
                                </div>

                                <div class="form-group">
                                <label for="matric" class="control-label">Level :   @Model.Student.Level</label>
                                </div>

                                <div class="form-group">
                                    <label for="matric" class="control-label">Date Scheduled : @Model.Date_Sched.Value.ToString("dddd, dd MMMM yyyy")</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group d-flex justify-content-end w-100 form-group">
                        <button id="button" class="btn-primary btn" onclick="window.print();return false;">>Download Schedule</button>
                        </div>
                </div>
            </div>
        </div>

    </div>
</div>
